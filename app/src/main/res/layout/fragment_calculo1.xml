<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15sp"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/bt_historico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:backgroundTint="#FDFCFC"
        android:src="@drawable/rsz_1history"
        android:textSize="30sp"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_shift"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="shift"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"

            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_raiz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="@string/raiz"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"

            android:textSize="25sp" />

        <Button
            android:id="@+id/bt_raizCubica"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="³√x"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_percent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="%"
            android:textColor="#0C0C0C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_mod"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="|x|"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_quadrado"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="x²"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"

            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_cubo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="x³"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_potencia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="x^n"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_euler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="e^x"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_10x"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="*10^x"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_log"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="log"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"

            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_ln"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="ln"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_factorial"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="!"
            android:textColor="#0C0C0C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_parentesisAbrir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="("
            android:textColor="#0C0C0C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_parentesisFechar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text=")"
            android:textColor="#0C0C0C"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_sin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="sin"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"

            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_cos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="cos"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_tan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="tan"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_pi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="@string/pi"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_derivada"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_circular"
            android:text="d/dx"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="7"
            android:textColor="#FBFAFA"

            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="8"
            android:textColor="#F8F6F6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="9"
            android:textColor="#F8F6F6"
            android:textSize="30sp" />


        <Button
            android:id="@+id/bt_del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_black"
            android:text="DEL"
            android:textColor="#F8F6F6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_AC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_black"
            android:text="AC"
            android:textColor="#F8F6F6"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">



        <Button
            android:id="@+id/bt_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="4"
            android:textColor="#FBFAFA"

            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="5"
            android:textColor="#FBFAFA"

            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="6"
            android:textColor="#F8F6F6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_multiplicacao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_operacoes"
            android:text="*"
            android:textColor="#F8F6F6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_divisor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_operacoes"
            android:text="/"
            android:textColor="#F8F6F6"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="1"
            android:textColor="#FBFAFA"

            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="2"
            android:textColor="#FBFAFA"

            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="3"
            android:textColor="#F8F6F6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_soma"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_operacoes"
            android:text="+"
            android:textColor="#F8F6F6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_subtraccao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_operacoes"
            android:text="-"
            android:textColor="#F8F6F6"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_ponto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="."
            android:textColor="#FBFAFA"

            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="0"
            android:textColor="#FBFAFA"

            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_ans"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="ANS"
            android:textColor="#F8F6F6"
            android:textSize="30sp" />


        <Button
            android:id="@+id/bt_equal"
            android:layout_width="164dp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/bt_operacoes"
            android:text="="
            android:textColor="#F8F6F6"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>